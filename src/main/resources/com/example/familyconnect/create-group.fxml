<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.familyconnect.CreateGroupController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <HBox alignment="CENTER">
        <Button fx:id="backHomeButton" text="Home" onAction="#backtoHome"/>
    </HBox>

    <Label text="New Group"/>

    <TextField fx:id="groupNameField" promptText="Enter Group Name"/>

    <Button text="Create" onAction="#createGroupAndProceed"/>
</VBox>

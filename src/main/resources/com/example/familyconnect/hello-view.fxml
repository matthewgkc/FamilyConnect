<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?xml-stylesheet type="text/css" href="Home-page-style.css"?>

<VBox alignment="TOP_LEFT" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.familyconnect.HelloController">
    <padding>
        <Insets bottom="0.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="TOP_LEFT" styleClass="profileContainer">
        <Button fx:id="userProfileButton" text="User Profile" onAction="#onUserProfileClick"/>
    </VBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="welcomeLabel" text="" style="-fx-background-color: #ffffff; -fx-text-fill: #000000;"/>
    </HBox>
    <VBox alignment="CENTER" spacing="10.0" styleClass="mainContainer">
        <Button fx:id="createGroupButton" text="Create Group Page" onAction="#onCreateGroupButtonClick"/>
        <Button fx:id="groupDetailsButton" text="Group Details Page" onAction="#onGroupDetailsButtonClick"/>
        <Button fx:id="chatRoomButton" text="Go to Chatroom" onAction="#onChatRoomButtonClick"/>
        <Button fx:id="overviewButton" text="Digital Usage Overview" onAction="#onDigitalUsageOverviewClick"/>
        <Button fx:id="settingsPageButton" text="Settings" onAction="#onSettingsPageClick"/>
        <Button fx:id="contactButton" text="Contact" onAction="#onContactClick"/>
    </VBox>
    <HBox alignment="TOP_RIGHT" spacing="0.0" styleClass="profileContainer">
        <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButtonClick" style="-fx-background-color: #fe8547;"/>
    </HBox>



</VBox>

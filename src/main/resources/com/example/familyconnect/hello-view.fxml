<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.chat.ChatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="5.0">
        <Label text="Your Message:" style="-fx-font-weight: bold;"/>
        <HBox spacing="5.0">
            <TextField fx:id="userInputField" promptText="Type your message here..." HBox.hgrow="ALWAYS"/>
            <Button text="Send" onAction="#handleSendButton"/>
        </HBox>
    </VBox>


</VBox>
